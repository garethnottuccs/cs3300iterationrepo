<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class="w3-table w3-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Ingredients</th>
      <th>Instructions</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.category %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.instructions %></td>
        <td><%= recipe.rating %></td>
        <td><%= link_to 'Show', recipe, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', recipe, :class => "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path, :class => "btn btn-primary" %>
