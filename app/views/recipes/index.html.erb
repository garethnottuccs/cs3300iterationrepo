<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class="w3-table w3-bordered">
  <thead>
    <tr>
      <th><%= link_to "Name", :sort => "name"%> </th>
      <th><%= link_to "Category", :sort => "category"%></th>
      <th><%= link_to "Ingredients", :sort => "ingredients"%></th>
      <th><%= link_to "Instructions", :sort => "instructions"%></th>
      <th><%= link_to "Rating", :sort => "rating"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.category %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.instructions %></td>
        <td><%= recipe.rating %></td>
        <td><%= link_to 'Show', recipe, :class => "btn btn-primary" %></td>
        <td><% if user_signed_in? %><%= link_to 'Edit', edit_recipe_path(recipe), :class => "btn btn-primary" %><% end %></td>
        <td><% if user_signed_in? %><%= link_to 'Destroy', recipe, :class => "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %><%= link_to 'New Recipe', new_recipe_path, :class => "btn btn-primary" %><% end %>

